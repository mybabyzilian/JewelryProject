<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/allRed" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/allRed">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/login_user_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/userr" />
        <TextView
            android:id="@+id/number_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/login_user_iv"
            android:text="手机号码"
            android:textColor="@color/colorBlack"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/nXing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/number_"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/number_"
            android:text="*"
            android:textColor="@color/allRed" />

        <EditText
            android:id="@+id/register_num_edit"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:layout_toRightOf="@+id/nXing"
            android:background="@null"
            android:hint="请输入手机号" />

        <View
            android:id="@+id/login_null"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@+id/login_user_iv" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@+id/login_null"
            android:layout_margin="10dp"
            android:background="#cdcdcd" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/login_password_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/password" />

        <TextView
            android:id="@+id/YZM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/login_password_iv"
            android:text="验  证  码"
            android:textColor="@color/colorBlack"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/Xing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/YZM"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/YZM"
            android:text="*"
            android:textColor="@color/allRed" />

        <EditText
            android:id="@+id/register_password_edit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/Xing"
            android:background="@null"
            android:hint="请输入验证码" />

        <Button
            android:id="@+id/get_code_bt"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="获取"
            android:textSize="15sp"
            android:layout_alignBottom="@+id/register_password_edit"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:background="@color/allRed"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>


        <View
            android:id="@+id/login_null1"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@+id/login_password_iv" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@+id/login_null1"
            android:layout_margin="10dp"
            android:background="#cdcdcd" />
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/allRed"
        android:text="下一步"
        android:textColor="@android:color/white"/>


</LinearLayout>
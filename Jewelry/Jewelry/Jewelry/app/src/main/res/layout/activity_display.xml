<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#8f0303"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/display_return_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/fanhui" />

        <EditText
            android:id="@+id/filter_edit"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="8"
            android:background="@drawable/homepage_search_shape"
            android:gravity="center"
            android:hint="搜索相关宝贝"
            android:singleLine="true"
            android:textSize="15.0dip" />

        <ImageView
            android:id="@+id/display_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:src="@mipmap/news" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/homepage_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rb_display_old"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:button="@null"
            android:layout_weight="1"
            android:drawableTop="@mipmap/secondhand"
            android:gravity="center"
            android:text="二手转让"
            android:textColor="#646464"
            />


        <RadioButton
            android:id="@+id/rb_display_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:button="@null"
            android:layout_weight="1"
            android:drawableTop="@mipmap/newproduct"
            android:gravity="center"
            android:text="新品展示"
            android:textColor="#646464" />


    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#cdcdcd"/>

    <FrameLayout
        android:id="@+id/jewelry_display_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5">


    </FrameLayout>

</LinearLayout>
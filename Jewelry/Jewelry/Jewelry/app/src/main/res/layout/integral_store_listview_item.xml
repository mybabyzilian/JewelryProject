<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/facePic_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:src="@mipmap/zhubao" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/facePic_imageview">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="珠宝饰品01"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/stock_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tv"
            android:layout_marginTop="5dp"
            android:text="数量:96"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/saleNum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tv"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/stock_tv"
            android:text="已兑:4"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/salePrice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stock_tv"
            android:layout_marginTop="5dp"
            android:text="10积分"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/oldPrice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stock_tv"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/stock_tv"
            android:text="原价201积分"
            android:textColor="@android:color/black" />
    </RelativeLayout>

</RelativeLayout>
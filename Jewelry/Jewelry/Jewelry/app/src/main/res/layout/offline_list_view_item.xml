<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/off_list_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="15dp"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/off_list_image">

        <ImageView
            android:id="@+id/off_list_image_item"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/off_list_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/off_list_image_item"
            android:text="艾泽拉斯" />
    </RelativeLayout>

    <TextView
        android:id="@+id/off_list_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/off_list_image"
        android:text="安阳市" />

    <TextView
        android:id="@+id/off_list_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_toRightOf="@+id/off_list_image"
        android:text="悬赏金额：" />
</RelativeLayout>
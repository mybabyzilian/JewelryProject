<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_border">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/new_facepic_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher"
            />
        <LinearLayout
            android:id="@+id/dsds"
            android:layout_below="@+id/new_facepic_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/user_new_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"

                />
            <TextView
                android:id="@+id/new_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dsds"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/new_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/new_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#870808"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>